# JAVA_OPTS
JAVA_OPTS="-Xms<%= @java_xms %> -Xmx<%= @java_xmx %> -XX:+UseStringCache -XX:StringTableSize=<%= @java_string_table_size %> <%= @java_extra_options %>"

# Alternative path to config file
# default is /etc/disthene/disthene.yaml
# OPTS="-c /etc/disthene/disthene.yaml"

# Alternative path to log4j config file
# default is /etc/disthene/disthene-log4j.xml
# OPTS="-l /etc/disthene/disthene-log4j.xml"

# Alternative path to blacklist file
# default is /etc/disthene/blacklist.yaml
# OPTS="-b /etc/disthene/blacklist.yaml"

# Alternative path to whitelist file
# default is /etc/disthene/whitelist.yaml
# OPTS="-w /etc/disthene/whitelist.yaml"

# Alternative path to aggragation config file
# default is /etc/disthene/aggregator.yaml
# OPTS="-a /etc/disthene/aggregator.yaml"
#
# Combine to set several alternative paths
# OPTS="-c /etc/disthene/disthene.yaml -l /etc/disthene/disthene-log4j.xml -b /etc/disthene/blacklist.yaml"
